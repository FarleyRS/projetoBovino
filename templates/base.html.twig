<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}

        {% endblock %}
        <!-- Link de stilos do bootstrap -->
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">

        <!-- Navbar -->
         <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="container-fluid">
                <a class="navbar-brand" href="{{ path('app_dashboard') }}">Controle de Bovinos</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                    <a class="nav-link active" aria-current="page" href="{{ path('app_dashboard') }}">Home</a>
                    </li>
                    <li class="nav-item">
                    <a class="nav-link" href="{{ path('app_cow_index') }}">Bovinos</a>
                    </li>
                    <li class="nav-item">
                    <a class="nav-link" href="{{ path('app_relatorio_abate') }}">Abate</a>
                    </li>
                    <li class="nav-item">
                    <a class="nav-link" href="{{ path('app_veterinarian_index') }}" >Veterinarios</a>
                    </li>
                    <li class="nav-item">
                    <a class="nav-link" href="{{ path('app_farm_index') }}" >Fazendas</a>
                    </li>
                </ul>
                </div>
            </div>
        </nav>
    </head>
    <body>
        {% block javascripts %}
        {% endblock %}
        <!-- Link de scripts bootstrap -->
        <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js" integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.min.js" integrity="sha384-BBtl+eGJRgqQAUMxJ7pMwbEyER4l1g+O15P+16Ep7Q9Q+zqX6gSbd85u4mG4QzX+" crossorigin="anonymous"></script>
      
        {# Exibindo mensagens de erro #}
        {% for flashError in app.flashes('error') %}
            <div class="alert alert-danger">
                {{ flashError }}
            </div>
        {% endfor %}

        {# Exibindo mensagens de sucesso #}
        {% for flashSuccess in app.flashes('success') %}
            <div class="alert alert-success">
                {{ flashSuccess }}
            </div>
        {% endfor %}
        {% block body %}{% endblock %}
    </body>
</html>
