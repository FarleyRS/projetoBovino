{% extends 'base.html.twig' %}

{% block title %}Dashboard Fazendas{% endblock %}

{% block body %}

<div class="container-fluid">
    <h1>Lista de Fazendas</h1>
        <a class = "btn btn-primary" href="{{ path('app_farm_new') }}">Adicionar nova Fazenda</a>
        
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Nome</th>
                    <th>Tamanho</th>
                    <th>Responsavel</th>
                    <th>Opções</th>
                </tr>
            </thead>
            <tbody>
            {% for farm in farms %}
                <tr>
                    <td>{{ farm.id }}</td>
                    <td>{{ farm.nome }}</td>
                    <td>{{ farm.tamanho|number_format(2, ',', '.') }} ha</td>
                    <td>{{ farm.responsavel }}</td>
                    <td>
                        <a class = "btn btn-primary" href="{{ path('app_farm_show', {'id': farm.id}) }}">Visualizar</a>
                        <a class = "btn btn-secondary" href="{{ path('app_farm_edit', {'id': farm.id}) }}">Editar</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5">Nenhum registro encontrado.</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        {# Renderizar a paginação usando o KnpPaginatorBundle #}
        <div class="pagination">
            {{ knp_pagination_render(farms) }}
        </div>
</div>
    

    
{% endblock %}
