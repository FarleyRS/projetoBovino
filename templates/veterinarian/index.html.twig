{% extends 'base.html.twig' %}

{% block title %}Veterinarian index{% endblock %}

{% block body %}
    <h1>Veterinarian index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nome</th>
                <th>CRMV</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for veterinarian in veterinarians %}
            <tr>
                <td>{{ veterinarian.id }}</td>
                <td>{{ veterinarian.nome }}</td>
                <td>{{ veterinarian.CRMV }}</td>
                <td>
                    <a href="{{ path('app_veterinarian_show', {'id': veterinarian.id}) }}">show</a>
                    <a href="{{ path('app_veterinarian_edit', {'id': veterinarian.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
     {# Renderizar a paginação usando o KnpPaginatorBundle #}
    <div class="pagination">
        {{ knp_pagination_render(veterinarians) }}
    </div>

    <a href="{{ path('app_veterinarian_new') }}">Create new</a>
{% endblock %}
