{% extends 'base.html.twig' %}

{% block title %}Visualizar Bovino{% endblock %}

{% block body %}
    <div class = "container">
        <h1>Bovino</h1>

        <table class="table table-striped">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ cow.id }}</td>
                </tr>
                <tr>
                    <th>Codigo</th>
                    <td>{{ cow.codigo }}</td>
                </tr>
                <tr>
                    <th>Quantidade de leite</th>
                    <td>{{ cow.qtLeite|number_format(2, ',', '.') }}</td>
                </tr>
                <tr>
                    <th>Quantidade de ração</th>
                    <td>{{ cow.qtRacao|number_format(2, ',', '.') }}</td>
                </tr>
                <tr>
                    <th>Peso</th>
                    <td>{{ cow.peso|number_format(2, ',', '.') }}</td>
                </tr>
                <tr>
                    <th>Status</th>
                    <td>{{ cow.status ? 'Vivo':'Abatido'}}</td>
                </tr>
                <tr>
                    <th>Fazenda</th>
                    <td>{{ cow.fazenda }}</td>
                </tr>
                <tr>
                    <th>Nascimento</th>
                    <td>{{ cow.nascimento ? cow.nascimento|date('d-m-Y') : '' }}</td>
                </tr>
            </tbody>
        </table>
        {{ include('cow/_delete_form.html.twig') }}
    </div>
{% endblock %}
